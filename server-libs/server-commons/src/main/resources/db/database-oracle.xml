<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:jdbc="http://www.springframework.org/schema/jdbc"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans-4.0.xsd


                           http://www.springframework.org/schema/jdbc
                           http://www.springframework.org/schema/jdbc/spring-jdbc-4.0.xsd"
        >

    <!-- NÃO COMENTE OS SCRIPTS ABAIXO, AO INVÉS DISSO COLOQUE NAS VMS OPTIONS a configuração -Danvisa.enabled.h2.inserts=false -->
    <jdbc:initialize-database data-source="dataSource" ignore-failures="ALL"
                              enabled="#{systemProperties['anvisa.enabled.h2.inserts']?:true}">
        <jdbc:script location="classpath:/db/ddl/drops.sql"/>
        <jdbc:script location="classpath:/db/ddl/create-tables.sql"/>
        <jdbc:script location="classpath:/db/ddl/create-tables-anvisa.sql"/>
        <jdbc:script location="classpath:/db/ddl/create-oracle.sql"/>
        <jdbc:script location="classpath:/db/ddl/create-constraints-anvisa.sql"/>
        <jdbc:script location="classpath:/db/ddl/create-constraints.sql"/>
        <jdbc:script location="classpath:/db/ddl/create-workarounds.sql"/>
        <jdbc:script location="classpath:/db/ddl/create-aliases.sql" separator="#"/>
        <jdbc:script location="classpath:/db/dml/insert-usuario.sql" encoding="UTF-8"/>
        <jdbc:script location="classpath:/db/dml/insert-dados-singular.sql" encoding="UTF-8"/>
        <jdbc:script location="classpath:/db/dml/insert-rascunhos.sql" encoding="UTF-8"/>

        <jdbc:script location="classpath:/data/notificacaosimplificada/create_tables.sql" encoding="UTF-8"/>
        <jdbc:script location="classpath:/data/notificacaosimplificada/inserts.sql" encoding="UTF-8"/>
        <jdbc:script location="classpath:/data/notificacaosimplificada/insert_geral.sql" encoding="UTF-8"/>
        <jdbc:script location="classpath:/data/notificacaosimplificada/create-tables-anvisa.sql" encoding="UTF-8"/>
        <jdbc:script location="classpath:/data/notificacaosimplificada/insert-usuario.sql" encoding="UTF-8"/>

    </jdbc:initialize-database>

</beans>
